<Application x:Class="GamifiedLearningPlatform.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:GamifiedLearningPlatform.Views"
             xmlns:vm="clr-namespace:GamifiedLearningPlatform.ViewModels"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/GlobalStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type vm:StudentDashboardViewModel}">
                <views:StudentDashboardView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:StudentDetailsViewModel}">
                <views:StudentDetailsView/>
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>
</Application>